# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Platform API Configuration
# In development mode, defaults to http://localhost:3000/api and http://localhost:3000
# Uncomment to override defaults:
# PLATFORM_API_URL=https://arcane-circle-git-testing-arcane-circle.vercel.app/api
# PLATFORM_WEB_URL=https://arcane-circle-git-testing-arcane-circle.vercel.app
VERCEL_BYPASS_TOKEN=your_vercel_bypass_token_here
# Bot API Key for authenticating bot requests to the platform API
BOT_API_KEY=your_secure_bot_api_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/arcane_circle_bot

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# OpenAI Configuration (for transcription)
OPENAI_API_KEY=your_openai_api_key_here

# Transcription Engine Configuration
# Choose transcription engine: openai (cloud API), local (offline whisper.cpp), deepgram (cloud API)
TRANSCRIPTION_ENGINE=openai

# Local Whisper Configuration (when TRANSCRIPTION_ENGINE=local)
# Model size: tiny, tiny.en, base, base.en, small, small.en, medium, medium.en, large-v1, large-v2, large-v3, large-v3-turbo
# Larger models = better accuracy but slower and more memory
# .en models are English-only and faster
WHISPER_MODEL_SIZE=base
# Path to store downloaded Whisper models (models are ~75MB to 2.9GB each)
WHISPER_MODELS_PATH=./models
# Enable GPU acceleration (Metal on Mac, CUDA on NVIDIA, Vulkan on others)
WHISPER_USE_GPU=true
# Library variant: default (CPU+Metal), vulkan (GPU via Vulkan), cuda (GPU via CUDA)
WHISPER_LIB_VARIANT=default

# Recording Configuration
RECORDING_MAX_DURATION_MINUTES=120
RECORDING_AUDIO_QUALITY=high
RECORDING_AUTO_TRANSCRIBE=true

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_RECORDINGS=5

# Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=

# Webhook Configuration (optional)
WEBHOOK_URL=
WEBHOOK_SECRET=