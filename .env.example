# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Platform API Configuration
# In development mode, defaults to http://localhost:3000/api and http://localhost:3000
# Uncomment to override defaults:
# PLATFORM_API_URL=https://arcane-circle-git-testing-arcane-circle.vercel.app/api
# PLATFORM_WEB_URL=https://arcane-circle-git-testing-arcane-circle.vercel.app
VERCEL_BYPASS_TOKEN=your_vercel_bypass_token_here
# Bot API Key for authenticating bot requests to the platform API
BOT_API_KEY=your_secure_bot_api_key_here

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Recording Configuration
# Note: Transcription is handled by the cloud API after upload
RECORDING_MAX_DURATION_MINUTES=120
RECORDING_AUDIO_QUALITY=high

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_RECORDINGS=5

# Webhook Configuration (optional)
WEBHOOK_URL=
WEBHOOK_SECRET=

# Game Announcement Configuration
# Enable automatic announcements of newly published games to a Discord channel
GAME_ANNOUNCEMENT_ENABLED=false
# Discord channel ID where game announcements will be posted
# Get this by enabling Developer Mode in Discord, right-clicking a channel, and selecting "Copy ID"
GAME_ANNOUNCEMENT_CHANNEL_ID=
# Discord role ID to ping when new games are announced (optional)
# Get this by enabling Developer Mode in Discord, right-clicking a role, and selecting "Copy ID"
GAME_ANNOUNCEMENT_ROLE_ID=
# How often to check for new games (in hours, default: 3)
# Supported values: 1-24 hours
GAME_ANNOUNCEMENT_INTERVAL_HOURS=3